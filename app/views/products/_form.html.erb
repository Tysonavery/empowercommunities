<% form_for(@product) do |f| %>
  <%= f.error_messages %>

<table>
  <tr>
    <td><%= f.label :name %></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td><%= f.label :code %></td>
    <td><%= f.text_field :code %></td>
  </tr>
  <tr>
    <td><%= f.label :product_type_id %></td>
    <td><%= f.text_field :product_type_id %></td>
  </tr>
  <tr>
    <td><%= f.label :first_production %></td>
    <td><%= f.date_select :first_production, :start_year=>2004 , :end_year=>Time.now.year %></td>
  </tr>
  <tr>
    <td><%= f.label :ceased_production %></td>
    <td><%= f.date_select :ceased_production, :start_year=>2004 , :end_year=>Time.now.year %></td>
  </tr>
    
  <% f.fields_for :area_products do |ap| %>
	  <tr>
		<td><%= ap.label :shape %></td>
		<td><%= ap.text_field :shape %></td>
	  </tr>
	  <tr>
	    <td><%= ap.label :width %></td>
		<td><%= ap.text_field :width %></td>
	  </tr>
	  <tr>
		<td><%= ap.label :length %></td>
		<td><%= ap.text_field :length %></td>
	  </tr>
	  <tr>
		<td><%= ap.label :area %></td>
		<td><%= ap.text_field :area %></td>
	  </tr>
	  <tr>
		<td><%= ap.label :perimeter %></td>
		<td><%= ap.text_field :perimeter %></td>
	  </tr>
  <% end %>
  
  <tr>
    <td></td>
	<td><%= f.submit 'Submit' %></td>
  </tr>  
</table>

<% end %>
