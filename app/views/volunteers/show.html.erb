</tr>

<tr>
  <td>Processed by:</td>
  <td><%=h @volunteer.processed_by %></td>
</tr>

<tr>
  <td>Entered by:</td>
  <td><%=h @volunteer.entered_by %></td>
</tr>

<tr>
  <td>Region:</td>
  <td><%=h @volunteer.region %></td>
</tr>

<tr>
  <td>Paid:</td>
  <td><%=h @volunteer.paid %></td>
</tr>

<tr>
  <td>Payment method:</td>
  <td><%=h @volunteer.payment_method %></td>
</tr>

<tr>
  <td>Payment notes:</td>
  <td><%=h @volunteer.payment_notes %></td>
</tr>

<tr>
  <td>Personal skills:</td>
  <td><%=h @volunteer.personal_skills %></td>
</tr>

